<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_gallery_widget" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_gallery_dummy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_view_module_black_48dp"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        android:text="Add Image"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:background="@drawable/dark_gray_border_transparent_background"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>