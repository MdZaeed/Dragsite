<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinkButtonStyle">

        <item name="android:background">@null</item>
        <item name="android:drawableRight">@android:drawable/ic_media_play</item>
<!--
        <item name="android:elevation">0dp</item>
-->
        <item name="android:gravity">left|center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="SpecialButtonStyle">
        <item name="android:background">@null</item>
        <!--
                <item name="android:elevation">0dp</item>
        -->
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="HoveringTextBoxStyle">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:hint">Double tap to edit text</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
